{
     "manifest_version": 2,
     "name": "bbCodeWebex",
     "version": "0.2.0",
     "description": "Context Menus for bbCode/Html/Markdown/etc. formatting",
     "default_locale": "en-US",
     "icons": {
          "16": "icons/bbcwbx.svg"
     },
     "author": "Matthew G. Saroff",
     "homepage_url": "https://github.com/msaroff/bbCodeWebEx",
     "permissions": [
           "<all_urls>",
           "notifications",
           "contextMenus",
		   "downloads",
           "menus",
           "storage",
           "tabs",
           "alarms",
           "activeTab",
           "clipboardRead",
           "clipboardWrite"
     ],
     "web_accessible_resources": [
           "data/*.json"
     ],
     "background": {
          "scripts": ["context_menu.js"]
     },
     "content_scripts": [
          {
          "matches": ["*://*/*"],
          "js": ["libraries/dom.js", "content_script.js"],
		  "all_frames": true
          }
     ],
     "options_ui": {
          "page": "settings/options.html",
		  "browser_style": false
		  }
}