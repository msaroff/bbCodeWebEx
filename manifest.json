{
     "manifest_version": 2,
     "name": "bbCodeWebex",
     "version": "0.1.3",
     "description": "Context Menus for bbCode/Html/Markdown/etc. formatting",
     "default_locale": "en-US",
     "icons": {
          "16": "icons/bbcwbx.svg"
          
     },
     "author": "Matthew G. Saroff",
     "homepage_url": "https://github.com/msaroff/bbCodeWebEx",
     "permissions": [
           "<all_urls>",
           "notifications",
           "contextMenus",
           "menus",
           "storage",
           "tabs",
           "alarms",
           "activeTab",
           "clipboardRead",
           "clipboardWrite"
     ],
     "web_accessible_resources": [
           "data/*.json"
     ],
     "background": {
          "scripts": ["context_menu.js"]
     },
     "content_scripts": [
          {
          "matches": ["*://*/*"],
		  "css": ["cpicker/cpicker.css"],
          "js": ["node_modules/es6lib/dom.js", "content_script.js", "cpicker/cpicker.js"]
          }
     ],
	  "browser_action": {
	      "default_popup": "popup/popup.html"
		  },
     "options_ui": {
          "page": "settings/options.html",
                "browser_style": false
     }
}